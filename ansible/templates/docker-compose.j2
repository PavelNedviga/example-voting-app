# for running in docker compose with prebuilt images
version: '2'
services:
  redis:
    image: redis:alpine
    volumes:
      - "./healthchecks:/healthchecks"
    healthcheck:
      test: /healthchecks/redis.sh
      interval: "5s"
    networks:
      - back-tier

  db:
    image: postgres:15-alpine
    environment:
      POSTGRES_USER: "{{POSTGRES_USER}}"
      POSTGRES_PASSWORD: "{{POSTGRES_PASSWORD}}"
    volumes:
      - "db-data:/var/lib/postgresql/data"
      - "./healthchecks:/healthchecks"
    healthcheck:
      test: /healthchecks/postgres.sh
      interval: "5s"
    networks:
      - back-tier

  worker:
    image: {{DOCKER_REGISTRY_HOST}}/{{DOCKER_IMAGE_WORKER}}:{{DOCKER_IMAGE_VERSION}}
    networks:
      - back-tier
      
  vote:
    image: {{DOCKER_REGISTRY_HOST}}/{{DOCKER_IMAGE_VOTE}}:{{DOCKER_IMAGE_VERSION}}
    ports:
      - "5000:80"
    networks:
      - front-tier
      - back-tier

  result:
    image: {{DOCKER_REGISTRY_HOST}}/{{DOCKER_IMAGE_RESULT}}:{{DOCKER_IMAGE_VERSION}}
    ports:
      - "5001:80"
    networks:
      - front-tier
      - back-tier
  
volumes:
  db-data:

networks:
  front-tier:
  back-tier:
